<?xml version='1.0' encoding='utf-8'?>
<widget id="com.dontmindme.phonebook" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Send SMS</name>
    <description>
        A Phonebook from where messages can be sent to contacts at a pregiven timespace.
    </description>
    <author email="irinbanerjee@gmail.com" href="http://cordova.io">
        DontMindMe
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="android">
        <icon density="ldpi" src="res/icon/android/36.png" />
        <icon density="mdpi" src="res/icon/android/48.png" />
        <icon density="hdpi" src="res/icon/android/72.png" />
        <icon density="xhdpi" src="res/icon/android/96.png" />
    </platform>
    <plugin name="cordova-plugin-contacts" spec="^3.0.1" />
    <plugin name="cordova-sms-plugin" spec="^0.1.13" />
    <plugin name="cordova-plugin-sms" spec="^1.0.5" />
    <engine name="android" spec="^7.1.1" />
</widget>
